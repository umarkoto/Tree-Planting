<odoo>
    <record id="update_pohon_view_tree" model="ir.ui.view">
        <field name="name">update.pohon.tree</field>
        <field name="model">update.pohon</field>
        <field name="arch" type="xml">
            <tree string="Update List">
                <!--                <field name="update_id"/>-->

                <field name="tanggal_update"/>
                <field name="ukuran"/>
                <field name="image" widget="image" options="{'size': [90, 90]}"/>
            </tree>
        </field>
    </record>

    <record id="update_pohon_view_form" model="ir.ui.view">
        <field name="name">update.pohon.form</field>
        <field name="model">update.pohon</field>
        <field name="arch" type="xml">
            <form string="Tree Planting Form">
                <sheet>
                    <group string="Data Update">
                        <group>
                            <field name="tanggal_update"/>
                            <field name="ukuran"/>
                            <field name="image" widget="image" options="{'size': [90, 90]}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
</odoo>
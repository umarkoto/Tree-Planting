<odoo>

    <record id="tanam_pohon_view_tree" model="ir.ui.view">
        <field name="name">tanam.pohon.tree</field>
        <field name="model">tanam.pohon</field>
        <field name="arch" type="xml">
            <tree string="Tree Planting List">
                <field name="nama"/>
                <field name="nrp"/>
                <field name="entit"/>
                <field name="nama_penanam"/>
                <field name="is_employee"/>
                <field name="lokasi"/>
                <field name="jumlah" sum="Jumlah Pohon"/>
            </tree>
        </field>
    </record>

    <record id="tanam_pohon_view_form" model="ir.ui.view">
        <field name="name">tanam.pohon.form</field>
        <field name="model">tanam.pohon</field>
        <field name="arch" type="xml">
            <form string="Tree Planting Form">
                <sheet>
                    <group>
                        <group string="Data Karyawan">
                            <field name="nama" readonly="1"/>
                            <field name="nrp" readonly="1"/>
                            <field name="entit" readonly="1"/>
                        </group>
                        <group string="Data Penanam">
                            <field name="is_employee" widget="boolean_toggle"/>
                            <field name="nama_penanam"
                                   attrs="{'invisible': [('is_employee', '=', True)]}"/>
                            <field name="relasi"
                                   attrs="{'invisible': [('is_employee', '=', True)]}"/>
                            <field name="start_date"/>
                            <field name="lokasi" placeholder="ex. Muara Tawar"/>
                            <field name="jenis_pohon" placeholder="ex. Mangrove"/>
                            <field name="jumlah" placeholder="ex. 1"/>
                            <field name="ukuran" placeholder="ex. 10 cm"/>
                            <field name="image" widget="image" options="{'size': [90, 90]}"/>
                            <field name="noted" placeholder="ex. Penanaman Pohon dilakukan ketika acara HUT YKBUT"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Update Pertumbuhan">
                            <group>
                                <field name="update_line"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="tanam_pohon_view_graph" model="ir.ui.view">
        <field name="name">tanam.pohon.graph</field>
        <field name="model">tanam.pohon</field>
        <field name="arch" type="xml">
            <graph string="Tanam Pohon" sample="1" stacked="False" type="bar" order="desc">
                <field name="jumlah"/>
                <field name="entit"/>
            </graph>
        </field>
    </record>

    <record id="tanam_pohon_list_action" model="ir.actions.act_window">
        <field name="name">Tanam</field>
        <field name="res_model">tanam.pohon</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p name="o_view_nocontent_smiling_face">
                Input Data Pertama Anda ...
            </p>
        </field>
    </record>

    <record id="tanam_pohon_action" model="ir.actions.act_window">
        <field name="name">Tanam</field>
        <field name="res_model">tanam.pohon</field>
        <field name="view_mode">graph,form,kanban,pivot</field>
        <field name="help" type="html">
            <p name="o_view_nocontent_smiling_face">
                Input Data Pertama Anda ...
            </p>
        </field>
    </record>
</odoo>